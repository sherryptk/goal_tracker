<%= form_for @goal do |f| %>

<p><%= f.label :title %></p>
<%= f.text_field :title %><br/>

<p><%= f.label :description %></p>
<%= f.text_area :description, size: "24x6" %><br/>
<% if !Category.all.empty? %>
<p><%= f.label "Choose Existing Category" %></p>
<%= f.collection_check_boxes :category_ids, Category.all, :id, :name %>
<% end %>
<%= f.fields_for :categories, @goal.categories.build do |category_fields| %>
<p><%= f.label "Choose New Category" %></p>
     <%= category_fields.text_field :name %>
 <% end %></p>
<%= f.submit %>
<% end %>
