<h1>Welcome, <%= current_user.email %>!</h1>

 <p>View <%= link_to "Goals", goals_path%></p>

<p>Create New <%=  link_to "Goal", new_goal_path%></p>

<p>View <%= link_to "Tasks", by_date_path %></p>

<h3>Explore Goals by Category</h3>
<ul>
<% if !current_user.categories.empty? %>
  <% current_user.categories.each do |category| %>
  <% if category.name != "" %>
      <li> <%= link_to category.name, category_path(category) %> </li>
    <% end %>
  <% end %>
<% else %>
  You have no goals added right now
<% end %>
</ul>

<h3>Upcoming Deadlines</h3>
<ul>
<% if !current_user.tasks.empty? %>
  <% current_user.tasks.each do |task| %>
    <li> <%= link_to task.description, task_path(task) %> </li>
  <% end %>
<% else %>
  You have no upcoming deadlines
<% end %>

</ul>
